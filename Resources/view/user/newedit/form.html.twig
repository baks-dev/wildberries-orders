{% trans_default_domain 'user.user.profile' %}

<div class="d-flex align-items-start gap-3">
	
	<div class="d-flex flex-column w-100 gap-3">
		
		{# Настройки локали #}
		<div class="card border-light">
			
			<div class="card-header border-light bg-body">
				<div class="card-title">
					<h4>
						{# Основные настройки #}
						{{ 'user.form.header.basic'|trans }}
					</h4>
				</div>
			</div>
			
			
			<div class="card-body ">
				<div class="d-flex">
					<div class="w-50 mt-3">
						{# Файл аватарки #}
						{{ include(_self|replace({ "form.html.twig": "_avatar.html.twig" })) }}
					</div>
					<div class="w-50">
						{# Основные настройки #}
						{{ include(_self|replace({ "form.html.twig": "_basic.html.twig" })) }}
					</div>
				</div>
			</div>
		</div>
		
		{# Личные данные #}
		{{ include(_self|replace({ "form.html.twig": "_personal.html.twig" })) }}
	
	</div>
	
	<div class="d-flex flex-column w-100 gap-3">
		{# Динамические поля формы #}
		{{ include(_self|replace({ "form.html.twig": "_fields.html.twig" })) }}
	</div>

</div>